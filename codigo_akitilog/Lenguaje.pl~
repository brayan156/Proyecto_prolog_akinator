%Estructura de oraciones%


sujeto(Num, Gen, Pers, L0, L):-
    determinante(Num, Gen, Pers, L0, L1),
    sustantivo(Num,Gen,L1,L).

sujeto(Num, Gen, Pers, L0, L):-
    pronombre(Num, Gen, Pers, L0, L).

predicado(Num, _, Pers, L0, L):-
    verbo(Num,Pers,L0,L1),
    sujeto(_,_,_,L1,L).

predicado(Num,_,Pers,L0,L):-
    verbo(Num, Pers, L0, L).


conjuncion([y|L],L).


oracion(L0,L):-
    sujeto(Num, _, Pers, L0, L1),
    predicado(Num, _, Pers, L1, L).

oracion(L0, L) :-
    pronombre(Num, Gen, Pers, L0, L1),
    predicado(Num, Gen, Pers, L1, L).

oracion(L0, L) :-
    pronombre(Num,_,Pers,L0, L1),
    predicado(Num, _, Pers, L1, L).

oracion(L0, L) :-
    predicado(_, _, _, L0, L1),
    adjetivo(L1, L).

oracion(L0, L) :-
    pronombre(_,_,_,L0, L1),
    verbo(_,_,L1,L2),
    adjetivo(L2, L).

oracion(L0, L) :-
    sujeto(Num, Gen, Pers, L0, L1),
    predicado(Num, Gen, Pers, L1, L2),
    adjetivo(L2, L).

oracion(L0, L) :-
    sujeto(Num, Gen, Pers, L0, L1),
    predicado(Num, Gen, Pers, L1, L2),
    preposicion(L2,L3),
    adjetivo(L3, L).

